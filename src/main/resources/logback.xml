<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">


    <property name="LOG_DIR" value="logs"/>
    
    <property name="HOME_LOG_NAME" value="myLog"/>
    <property name="HOME_LOG" value="${LOG_DIR}/${HOME_LOG_NAME}.log"/>
    
    <property name="CACHE_LOG_NAME" value="cacheLog"/>
    <property name="CACHE_LOG" value="${LOG_DIR}/${CACHE_LOG_NAME}.log"/>

    <property name="HUAWEI_LOG_NAME" value="huaweiLog"/>
    <property name="HUAWEI_LOG" value="${LOG_DIR}/${HUAWEI_LOG_NAME}.log"/>

    <property
            name="PATTERN"
            value="%d{HH:mm:ss.SSS} %highlight(%-5level) %yellow(%C{36}.%M %L): %msg%n"
    />

    <property
            name="PATTERN_SIMPLE"
            value="%d{HH:mm:ss.SSS} %-5level %M %L: %msg%n"
    />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>${PATTERN}</Pattern>
        </layout>
    </appender>

    <appender name="COMMON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG}</file>

        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator> <!-- defaults to type ch.qos.logback.classic.boolex.JaninoEventEvaluator -->
                <expression>return logger.equals("application");</expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${HOME_LOG_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB,
                it will delete old archived file -->
            <totalSizeCap>6GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="CACHE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CACHE_LOG}</file>

        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator> <!-- defaults to type ch.qos.logback.classic.boolex.JaninoEventEvaluator -->
                <expression>return logger.equals("cache");</expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${CACHE_LOG_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB,
                it will delete old archived file -->
            <totalSizeCap>6GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${PATTERN_SIMPLE}</pattern>
        </encoder>
    </appender>

    <appender name="HUAWEI" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HUAWEI_LOG}</file>

        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator> <!-- defaults to type ch.qos.logback.classic.boolex.JaninoEventEvaluator -->
                <expression>return logger.equals("huawei");</expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${HUAWEI_LOG_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB,
                it will delete old archived file -->
            <totalSizeCap>6GB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${PATTERN_SIMPLE}</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="COMMON"/>
    </root>

    <logger name="application" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="COMMON"/>
    </logger>

    <logger name="cache" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="CACHE"/>
    </logger>

    <logger name="huawei" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="HUAWEI"/>
    </logger>

</configuration>